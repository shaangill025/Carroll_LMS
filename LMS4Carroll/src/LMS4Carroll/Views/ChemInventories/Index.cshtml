@model IEnumerable<LMS4Carroll.Models.ChemInventory>

@{
    ViewData["Title"] = "Index";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Chemical Inventory</div>
    <div class="panel-body">
        <div class="btn-group">
            @if (User.IsInRole("Admin") || User.IsInRole("Handler"))
            {
                <a id="createRoleModal" asp-action="Create" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>  Add Inventory
                </a>
            }
        </div><br />
            <form asp-controller="ChemInventories" asp-action="Index">
                <div class="form-actions no-color">
                    <p>
                        <input type="text" name="CheminventoryString" value="@ViewData["currentFilter"]" />
                        <input type="submit" value="Search" class="btn btn-default" />  
                        <a class="btn btn-default" asp-action="Index">Back to Full List</a>
                    </p>
                </div>
            </form>
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BarcodeID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Chemical.FormulaName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ChemID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LocationID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location.Room)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Chemical.SDS)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpiryDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QtyLeft)
                        </th>
                        <th>
                            Units
                        </th>
                        @if (User.IsInRole("Admin") || User.IsInRole("Handler"))
                        {
                            <th>
                                Actions
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BarcodeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Chemical.FormulaName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChemID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LocationID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Room)
                            </td>
                            <td>
                                <a target="_blank" href="@Html.DisplayFor(modelItem => item.Chemical.SDS)">SDS</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpiryDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QtyLeft)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QtyLeftTeXT)
                            </td>
                            @if (User.IsInRole("Admin") || User.IsInRole("Handler"))
                            {
                                <td>
                                    <a id="addEditApplicationRoleModal" asp-action="Edit" asp-route-id="@item.BarcodeID" class="btn btn-info">
                                        <i class="glyphicon glyphicon-pencil"></i>Edit
                                    </a>
                                    <a id="deleteApplicationRoleModal" asp-action="Delete" asp-route-id="@item.BarcodeID" class="btn btn-danger">
                                        <i class="glyphicon glyphicon-trash"></i>Delete
                                    </a>
                                    <a id="addEditApplicationRoleModal" asp-action="Details" asp-route-id="@item.BarcodeID" class="btn btn-info">
                                        <i class="glyphicon glyphicon-pencil"></i>Details
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
