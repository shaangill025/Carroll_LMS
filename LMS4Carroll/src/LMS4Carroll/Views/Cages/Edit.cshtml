@model LMS4Carroll.Models.Cage

@{
    ViewData["Title"] = "Edit";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Edit Cage</div>
    <div class="panel-body">
        <br />
        <form asp-action="Edit">
            <div class="form-horizontal">
                <h4>Cage</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CageID" />
                <div class="form-group">
                    <label asp-for="DOB" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Designation" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Designation" class="form-control" />
                        <span asp-validation-for="Designation" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LocationID" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="LocationID" class="form-control" asp-items="ViewBag.LocationName"></select>
                        <span asp-validation-for="LocationID" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="OrderID" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="OrderID" class="form-control" asp-items="ViewBag.OrderID"></select>
                        <span asp-validation-for="OrderID" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Species" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Species" class="form-control" />
                        <span asp-validation-for="Species" class="text-danger" />
                    </div>
                </div>
                <div class="form-group" id="editbtn">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-action="Index" class="btn btn-danger">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
