@model IEnumerable<LMS4Carroll.Models.Cage>

@{
    ViewData["Title"] = "Index";
}


<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Cage</div>
    <div class="panel-body">
        <div class="btn-group">
            @if (User.IsInRole("Admin") || User.IsInRole("BiologyUser"))
            {
                <a id="createRoleModal" asp-action="Create" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>  Add Cage
                </a>
            }
        </div><br />
        <form asp-controller="Cages" asp-action="Index">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="CageString" value="@ViewData["currentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" />  
                    <a asp-action="Index" class="btn btn-default">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CageID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location.Room)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Designation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Species)
                    </th>
                   @if (User.IsInRole("Admin") || User.IsInRole("BiologyUser"))
                   {
                    <th>
                        Actions
                    </th>
                   }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CageID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Room)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Designation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Species)
                        </td>
                        @if (User.IsInRole("Admin") || User.IsInRole("BiologyUser"))
                        {
                            <td>
                                <a id="addEditApplicationRoleModal" asp-action="Edit" asp-route-id="@item.CageID" class="btn btn-info">
                                    <i class="glyphicon glyphicon-pencil"></i>Edit
                                </a>
                                <a id="deleteApplicationRoleModal" asp-action="Delete" asp-route-id="@item.CageID" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i>Delete
                                </a>
                                <a id="addEditApplicationRoleModal" asp-action="Details" asp-route-id="@item.CageID" class="btn btn-info">
                                    <i class="glyphicon glyphicon-pencil"></i>Details
                                </a>
                            </td>
                        }
                        <td></td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
