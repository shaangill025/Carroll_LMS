@model IEnumerable<LMS4Carroll.Models.BioEquipment>

@{
    ViewData["Title"] = "Index";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Biological Equipments</div>
    <div class="panel-body">
        <div class="btn-group">
        @if (User.IsInRole("Admin") || User.IsInRole("Handler"))
        {
            <a id="createRoleModal" asp-action="Create" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Add Equipment
            </a>
        }
        </div><br />
        <form asp-controller="BioEquipments" asp-action="Index">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="BioeqpmtString" value="@ViewData["currentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" />  
                    <a asp-action="Index" class="btn btn-default">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BioEquipmentID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AttributeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EquipmentModel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EquipmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location.Room)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                @if (User.IsInRole("Admin") || User.IsInRole("Handler"))
                {
                    <th>
                        Actions
                    </th>
                }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BioEquipmentID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttributeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EquipmentModel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EquipmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Room)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Handler"))
                    {
                        <td>
                            <a id="addEditApplicationRoleModal" asp-action="Edit" asp-route-id="@item.BioEquipmentID" class="btn btn-info">
                                <i class="glyphicon glyphicon-pencil"></i>Edit
                            </a>
                            <a id="deleteApplicationRoleModal" asp-action="Delete" asp-route-id="@item.BioEquipmentID" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>Delete
                            </a>
                            <a id="addEditApplicationRoleModal" asp-action="Details" asp-route-id="@item.BioEquipmentID" class="btn btn-info">
                                <i class="glyphicon glyphicon-pencil"></i>Details
                            </a>
                        </td>
                    }
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
